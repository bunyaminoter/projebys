@page "/personnel/courses/update/{courseId:int}"
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ders Güncelle</title>
    <link rel="stylesheet" href="/css/CourseUpdate.css">
    <script src="/js/CourseUpdate.js" defer></script>
</head>
<body>
    <div class="sidebar">
        <div class="logo-container">
            <img src="/img/ktu-logo.png" alt="Logo" class="logo">
        </div>

        <div id="menu">
            <span class="menu-item" onclick="toggleSubMenu('personnelMenu')">Personel İşlemleri</span>
            <div id="personnelMenu" class="sub-menu">
                <span><a href="#" id="updateProfileLink">Profil Güncelle</a></span>
            </div>

            <span class="menu-item" onclick="toggleSubMenu('studentMenu')">Danışman İşlemleri</span>
            <div id="studentMenu" class="sub-menu">
                <span><a href="#" id="myStudentsLink">Öğrencilerim</a></span>
            </div>

            <span class="menu-item" onclick="toggleSubMenu('courseMenu')">Ders İşlemleri</span>
            <div id="courseMenu" class="sub-menu">
                <span><a href="#" id="addCourseLink">Ders Ekle</a></span>
                <span><a href="#" id="updateCourseLink">Ders Güncelle</a></span>
                <span><a href="#" id="listCourseLink">Tüm Dersleri Listele</a></span>
            </div>
        </div>
    </div>

    <div class="course-update-container">
        <h2>Ders Güncelle</h2>
        <p>Güncellemek istediğiniz dersin bilgilerini aşağıda bulabilirsiniz:</p>

        <form id="courseUpdateForm">
            <div class="form-group">
                <label for="CourseName">Ders Adı:</label>
                <input type="text" id="CourseName" name="CourseName" required>
            </div>

            <div class="form-group">
                <label for="CourseCode">Ders Kodu:</label>
                <input type="text" id="CourseCode" name="CourseCode" required>
            </div>

            <div class="form-group">
                <label for="Credit">Kredi:</label>
                <input type="number" id="Credit" name="Credit" min="0" required>
            </div>

            <div class="form-group">
                <label for="IsMandatory">Zorunlu Ders:</label>
                <input type="checkbox" id="IsMandatory" name="IsMandatory">
            </div>

            <div class="form-group">
                <label for="Department">Bölüm:</label>
                <input type="text" id="Department" name="Department" required>
            </div>

            <button type="submit">Dersi Güncelle</button>
        </form>
    </div>

    <script>
        // Bu fonksiyon, alt menülerin görünürlüğünü değiştirmeyi sağlar
        function toggleSubMenu(menuId) {
            const menu = document.getElementById(menuId);
            menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
        }

        document.addEventListener('DOMContentLoaded', function() {
            // URL'den courseId almak
            const urlPath = window.location.pathname; // Örneğin: "/personnel/courses/update/123"
            const courseId = urlPath.split('/').pop(); // Sondaki ID'yi alır
            console.log(courseId); // 123

            // Course verilerini al
            fetch(`/api/course/GetCourseById/${courseId}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(course => {
                if (course) {
                    // Formu doldur
                    document.getElementById('CourseName').value = course.courseName;
                    document.getElementById('CourseCode').value = course.courseCode;
                    document.getElementById('Credit').value = course.credit;
                    document.getElementById('IsMandatory').checked = course.isMandatory;
                    document.getElementById('Department').value = course.department;
                } else {
                    alert("Ders verileri alınırken bir hata oluştu.");
                }
            })
            .catch(error => {
                console.error("Hata:", error);
                alert("Ders verileri alınırken bir hata oluştu.");
            });

            // Form gönderildiğinde güncellenen ders verisini gönder
            const courseUpdateForm = document.getElementById('courseUpdateForm');
            courseUpdateForm.addEventListener('submit', function (event) {
                event.preventDefault();

                const courseName = document.getElementById('CourseName').value;
                const courseCode = document.getElementById('CourseCode').value;
                const credit = document.getElementById('Credit').value;
                const isMandatory = document.getElementById('IsMandatory').checked;
                const department = document.getElementById('Department').value;

                if (!courseName || !courseCode || !credit || !department) {
                    alert("Lütfen tüm alanları doldurun.");
                    return;
                }

                const updatedCourse = {
                    courseId,
                    courseName,
                    courseCode,
                    credit: parseInt(credit, 10),
                    isMandatory,
                    department
                };

                fetch('/api/course/Update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(updatedCourse)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Ders başarıyla güncellendi!');
                        window.location.href = '/Personnel/Courses'; // Başarıyla güncellendikten sonra yönlendir
                    } else {
                        alert('Ders güncelleme sırasında bir hata oluştu.');
                    }
                })
                .catch(error => {
                    console.error('Hata:', error);
                    alert('Ders güncelleme işlemi sırasında bir hata oluştu.');
                });
            });
        });
    </script>
</body>
</html>
